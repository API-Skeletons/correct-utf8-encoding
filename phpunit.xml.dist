<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="./test/Bootstrap.php">
    <testsuites>
        <testsuite name="CorrectUtf8Encoding">
            <directory>./test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
